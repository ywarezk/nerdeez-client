<div class="nerdeez-box wallabout">
	<div class="nerdeez-box-action wallabout-action">
		<div class="pic-content">
			<div>
				<img {{bindAttr src="model.getImageUrl"}} />
			</div>
		</div>
		<div class="text-content">
			<div class="result-line">
				<h3>
					{{#if model.isCourse}}
						Course Name:
					{{else}}
						{{#if model.isFaculty}}
							Faculty Name:
						{{else}}
							{{#if model.isUniversity}}
								University Name:
							{{else}}
								Title:
							{{/if}}		
						{{/if}}	
					{{/if}}
				</h3>
				<span>{{model.title}}</span>
			</div>
			<div class="result-line">
				<h5> Description: </h5>
				<span>{{model.description}}</span>
			</div>
		</div>
	</div>
	<div class="nerdeez-box-footer wallabout-footer">
		<div class="footer-social">
			<ul class="like-status">
				<li>
					<a {{action "incDislike" model}} >
						<i class="icon-thumbs-down"></i>
					</a>
					<span class="badge badge-tertiary">
					{{model.dislike}}
					</span>
				</li>
				<li><i class="vertical-line"></i></li>
				<li>
					<a {{action "incLike" model}} >
						<i class="icon-thumbs-up"></i>
					</a>
					<span class="badge badge-primary">
					{{model.like}}
					</span>
				</li>
				<li><i class="vertical-line"></i></li>
				<li>
					<div class="fb">
						<a class="btn_2" {{action share}}>Share on Facebook</a>
					</div>
				</li>
			</ul>
			
		</div>
	</div>
</div>