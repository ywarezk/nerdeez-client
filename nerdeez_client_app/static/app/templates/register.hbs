<div class="register">
    <div class="lrform">
        <div class="form">
            <!-- Register form (not working)-->
            <form class="form-horizontal js-validation">
            <!-- Name -->
                <div class="form-group">
                    <label for="name" class="control-label col-md-3">Full Name</label>
                    <div class="col-md-6">
                        {{
                            view Ember.TextField
                            valueBinding="name"
                            class="validate[required, custom[onlyLetterSp, minSize[2], maxSize[50]]] form-control"
                            placeholder="Full Name"
                            required="true"
                            tabindex="3"
                        }}
                    </div>
                </div>   
                <!-- Email -->
                <div class="form-group">
                    <label for="email" class="control-label col-md-3">Email</label>
                    <div class="col-md-6">
                        {{
                            view Ember.TextField
                            valueBinding="email"
                            class="validate[required,custom[email]] form-control"
                            placeholder="Email"
                            required="true"
                            tabindex="4"
                        }}
                    </div>
                </div>                                       
                <!-- Password -->
                <div class="form-group">
                    <label for="password" class="control-label col-md-3">Password</label>
                    <div class="col-md-6">
                        {{
                            view Ember.TextField
                            valueBinding="password"
                            class="validate[required,minSize[5]] form-control"
                            placeholder="Password"
                            required="true"
                            type="password"
                            name="password"
                            id="password"
                            tabindex="5"
                        }}
                    </div>
                </div>
                <!-- Checkbox -->
                <div class="form-group">
                    <div class="col-md-6 col-md-offset-3">
                        <label class="checkbox-inline">
                            {{
                                view
                                Ember.Checkbox 
                                class="field login-checkbox validate[required]"
                                tabindex="6"
                                name="Field"
                                id="inlineCheckbox1"
                            }}
                            I agree with the {{#linkTo "terms"}}Terms of Use.{{/linkTo}}
                        </label>
                    </div>
                </div> 

                <!-- Buttons -->
                <div class="form-group">
                <!-- Buttons -->
                    <div class="col-md-6 col-md-offset-3"> 
                        <button class="btn btn-default" tabindex="5" type="submit" {{action "register"}}>Sign up</button>
                    </div>
                </div>
            </form>
        </div> 
    {{#if isLoading}}
        {{loading}}
    {{/if}}
    
    {{#if isError}}
        <div class="alert alert-danger">
          {{message}}
        </div>
    {{/if}}
    </div>
</div>