<div class="homepage">
	
	<!-- begin diagram -->
	<div class="row">
		<div class="span10">
		</div>
	</div>
	<!-- end diagram -->
	
	<!-- begin quickstart -->
	<div class="row quickstart account-container login stacked">
		<div class="span10 search">
			<div class="row">
				<form class="form-search nerdeez-inputs">
					<div class="padding-left">
						<h3>
							Quick Start 
						</h3>
						<p>
							Type your course number
						</p>
					</div>
					<div class="row">
						<div class="span8 padding-left">
						{{
							view
							Ember.TextField
							valueBinding="quickStart"
							class="search-query"
							placeholder="Ex. 234122"
						}}
						<i class="icon-search"></i>
						</div>
						<div class="span2">
							<button class="button btn btn-primary btn-large" {{action "submitSearch"}}>
								<i class="icon-search"></i>
								Search
							</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
	<!-- end quickstart -->
	
	<!-- begin carousel -->
	<div class="row">
		<div class="span10">
		</div>
	</div>
	<!-- end carousel -->
	
	<!-- begin donation -->
	<div class="row donation account-container login stacked">
		<div class="span10">
			<div class="explain">
				<h2>
					Support development by  buying a nerdeez T-Shirt
				</h2>
			</div>
			<div class="images">
				<div class="thumbnail">
					<img src="{{unbound view.staticUrl}}img/t-shirt.jpeg" />
				</div>
				<div class="thumbnail">
					<img src="{{unbound view.staticUrl}}img/t-shirt.jpeg" />
				</div>
				<div class="thumbnail">
					<img src="{{unbound view.staticUrl}}img/t-shirt.jpeg" />
				</div>
			</div>
			<div class="actions">
				{{#link-to "donate" class="button btn btn-primary btn-large"}}
				Donate
				{{/link-to}}
			</div>
		</div>
	</div>
	<!-- end donation -->
	
</div>