<div class="homepage">
	
	<!-- begin diagram -->
	<div class="row">
		<div class="span10">
		</div>
	</div>
	<!-- end diagram -->
	
	<!-- begin quickstart -->
	<div class="row quickstart account-container login stacked">
		<div class="span10 search">
			<div class="row">
				<form class="form-search nerdeez-inputs">
					<div class="padding-left">
						<h3>
							Quick Start 
						</h3>
						<p>
							Type your course number
						</p>
					</div>
					<div class="row">
						<div class="span8 padding-left">
						{{
							view
							Ember.TextField
							valueBinding="quickStart"
							class="search-query"
							placeholder="Ex. 234122"
						}}
						<i class="icon-search"></i>
						</div>
						<div class="span2">
							<button class="button btn btn-primary btn-large" {{action "submitSearch"}}>
								<i class="icon-search"></i>
								Search
							</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
	<!-- end quickstart -->
	
	<!-- begin carousel -->
	{{#if controller}}
		<div id="carousel-data" class="hidden">
			{{#each controller}}
				{{modZeroExcludeFirst this controller mod="4" html='</ul></div><div class="item"><ul class="tumbnails row clearfix">'}}
				  {{isFirst this controller html='<div class="item active"><ul class="tumbnails row clearfix">'}}
					  <li class="span3">
						  	<div class="thumbnail dialog" align="center">
						  		<div class="image-wrapper">
									<img {{bindAttr src="image"}}>
						        	</div>
			                </div>
					  </li>
				  {{isLast this controller html="</ul></div>"}}
			{{/each}}
		</div>
		<div class="row">
			<div class="span10">
				<div id="carousel-example-generic" class="carousel slide">
				  <!-- Indicators -->
				  <ol class="carousel-indicators">
				    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
				    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
				    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
				  </ol>
				
				  <!-- Wrapper for slides -->
				  <div class="carousel-inner">
				    <div class="item active">
				      <img src="..." alt="...">
				      <div class="carousel-caption">
				        ...
				      </div>
				    </div>
				    ...
				  </div>
				
				  <!-- Controls -->
				  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
				    <span class="icon-prev"></span>
				  </a>
				  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
				    <span class="icon-next"></span>
				  </a>
				</div>
	
			</div>
		</div>
	{{/if}}
	<!-- end carousel -->
	
	<!-- begin donation -->
	<div class="row donation account-container login stacked">
		<div class="span10">
			<div class="explain">
				<h2>
					Support development by  buying a nerdeez T-Shirt
				</h2>
			</div>
			<div class="images">
				<div class="thumbnail">
					<img src="{{unbound view.staticUrl}}img/t-shirt.jpeg" />
				</div>
				<div class="thumbnail">
					<img src="{{unbound view.staticUrl}}img/t-shirt.jpeg" />
				</div>
				<div class="thumbnail">
					<img src="{{unbound view.staticUrl}}img/t-shirt.jpeg" />
				</div>
			</div>
			<div class="actions">
				{{#link-to "donate" class="button btn btn-primary btn-large"}}
				Donate
				{{/link-to}}
			</div>
		</div>
	</div>
	<!-- end donation -->
	
</div>