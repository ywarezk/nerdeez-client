<div class="login">
    <div class="lrform">
        <div class="form">
            <form class="form-horizontal js-validation">
                <div class="form-group">
                    {{
                        view Ember.TextField
                        valueBinding="email"
                        class="validate[required,custom[email]] form-control"
                        placeholder="Email"
                        required="true"
                        tabindex="7"
                    }}
                </div>
                <div class="form-group">
                    {{
                        view Ember.TextField
                        valueBinding="password"
                        class="validate[required,minSize[5]] form-control"
                        placeholder="Password"
                        required="true"
                        type="password"
                        tabindex="8"
                    }}
                </div>
                <div class="form-group">
                    <label class="checkbox-inline">
                        {{
                        view
                        Ember.Checkbox 
                        checkedBinding="isRememberMe" 
                        tabindex="9"
                        }}
                        Remember me
                    </label>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default" tabindex="10" {{action "login"}}>Login</button>
                </div>
            </form>
        </div>
        {{#if isLoading}}
        <div class="center">
            {{loading}}
        </div>
        {{/if}}
        
        {{#if isError}}
            <div class="alert alert-danger">
                {{statusMessage}}
            </div>
        {{/if}}
        
        {{#if isSuccess}}
            <div class="alert alert-success">
                {{statusMessage}}
            </div>
        {{/if}}
    </div>
</div>
