<div class="lrform">
    <div class="form">
        <form class="form-horizontal js-validation">
            <div class="form-group">
                <label class="control-label col-md-3" for="email">Email</label>
                <div class="col-md-9">
                    {{
                        view Ember.TextField
                        valueBinding="email"
                        class="validate[required,custom[email]] form-control"
                        placeholder="Email"
                        required="true"
                        tabindex="7"
                    }}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3" for="password">Password</label>
                <div class="col-md-9">
                    {{
                        view Ember.TextField
                        valueBinding="password"
                        class="validate[required,minSize[5]] form-control"
                        placeholder="Password"
                        required="true"
                        type="password"
                        tabindex="8"
                    }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-9 col-md-offset-3">
                    <label class="checkbox-inline">
                        {{
                        view
                        Ember.Checkbox 
                        checkedBinding="isRememberMe" 
                        tabindex="9"
                        }}
                        Remember me
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-9 col-md-offset-3">
                    <button type="submit" class="btn btn-default" tabindex="10" {{action "login"}}>Login</button>
                    <button type="button" class="btn btn-default" tabindex="11" data-dismiss="modal">Close</button>
                </div>
            </div>
        </form>
    </div>
    {{#if isLoading}}
        {{loading}}
    {{/if}}
    
    {{#if isError}}
        <div class="alert alert-danger">
            {{statusMessage}}
        </div>
    {{/if}}
    
    {{#if isSuccess}}
        <div class="alert alert-success">
            {{statusMessage}}
        </div>
    {{/if}}
</div>